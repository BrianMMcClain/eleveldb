{so_name, "eleveldb.so"}.

{port_sources, ["c_src/*.cc"]}.

{port_envs, [
             %% Make sure to set -fPIC when compiling leveldb
             {"CFLAGS", "$CFLAGS -fPIC -I ../snappy/include"},
             {"DRV_CFLAGS", "$DRV_CFLAGS -Werror -I c_src/leveldb/include"},
             {"DRV_LDFLAGS", "$DRV_LDFLAGS c_src/leveldb/libleveldb.a c_src/snappy/lib/libsnappy.a -lstdc++"}
             ]}.

{pre_hooks, [{compile, "sh c_src/build_snappy.sh"},
             {clean, "sh c_src/build_snappy.sh clean"},
             {compile, "make -C c_src/leveldb"},
             {clean, "make -C c_src/leveldb clean"}]}.
